<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.demo.alamusi.audiorecorddemo.MainActivity">

    <Button
        android:id="@+id/btnStartRaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:text="StartRaw"/>

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnStartAmr"
        android:layout_alignLeft="@+id/btnStartAmr"
        android:layout_alignRight="@+id/btnStartAmr"
        android:layout_alignStart="@+id/btnStartAmr"
        android:layout_below="@+id/btnStartAmr"
        android:layout_marginTop="30dp"
        android:text="Stop"/>

    <Button
        android:id="@+id/btnStartWav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnStartRaw"
        android:layout_alignLeft="@+id/btnStartRaw"
        android:layout_alignRight="@+id/btnStartRaw"
        android:layout_alignStart="@+id/btnStartRaw"
        android:layout_below="@+id/btnStartRaw"
        android:layout_marginTop="30dp"
        android:text="StartWav"/>

    <Button
        android:id="@+id/btnStartAmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnStartWav"
        android:layout_alignLeft="@+id/btnStartWav"
        android:layout_alignRight="@+id/btnStartWav"
        android:layout_alignStart="@+id/btnStartWav"
        android:layout_below="@+id/btnStartWav"
        android:layout_marginTop="30dp"
        android:text="StartAmr"/>

    <Button
        android:id="@+id/btnPlayRaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnStartRaw"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="Play Raw"/>

    <Button
        android:id="@+id/btnPlayWav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnStartWav"
        android:layout_alignEnd="@+id/btnPlayRaw"
        android:layout_alignLeft="@+id/btnPlayRaw"
        android:layout_alignRight="@+id/btnPlayRaw"
        android:layout_alignStart="@+id/btnPlayRaw"
        android:text="Play Wav"/>

    <Button
        android:id="@+id/btnPlayAmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnStop"
        android:layout_alignEnd="@+id/btnPlayWav"
        android:layout_alignLeft="@+id/btnPlayWav"
        android:layout_alignRight="@+id/btnPlayWav"
        android:layout_alignStart="@+id/btnPlayWav"
        android:text="Play Amr"/>
</RelativeLayout>
