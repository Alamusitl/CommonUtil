<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="76dip"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="74dip"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/pptvvas_channel_item_bg"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/pptvvas_pay_channel_listview_logo"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:scaleType="center"
                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toLeftOf="@+id/pptvvas_payentranceimg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pptvvas_pay_channel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/pptvvas_buletext_bg"
                        android:textSize="16dip"
                        />

                    <TextView
                        android:id="@+id/pptvvas_pay_channel_note"
                        android:layout_width="95dip"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/pptvvas_sdk2_darkgray"
                        android:textSize="13dip"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/pptvvas_payentranceimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/pptvvas_pay_entrance"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/pptvvas_right_line"
            android:layout_width="1px"
            android:layout_height="65dip"
            android:layout_alignParentRight="true"
            android:background="@color/pptvvas_sdk2_darkgray"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/pptvvas_buttom_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="0dip"
        android:background="@color/pptvvas_sdk2_darkgray"
        />
</LinearLayout>
