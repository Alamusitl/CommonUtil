<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0000000"
        >

        <LinearLayout
            android:layout_width="@dimen/pptvvas_width_land"
            android:layout_height="@dimen/pptvvas_height_land"
            android:layout_centerInParent="true"
            android:background="@drawable/pptvvas_land_background"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/pptvvas_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dip"
                    android:background="@drawable/pptvvas_regist_backbtn"
                    />

                <TextView
                    style="@style/pptvvas_title_land_text"
                    android:layout_marginLeft="10dip"
                    android:text="@string/pptvvas_pay_channel"
                    />

                <TextView
                    android:id="@+id/pptvvas_payamount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="40dip"
                    android:layout_marginTop="10dip"
                    android:gravity="right"
                    android:text="@string/pptvvas_pay_amount"
                    android:textColor="@color/pptvvas_black"
                    android:textSize="15dip"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/pptvvas_widthb_land"
                android:layout_height="@dimen/pptvvas_heightb_land"
                android:layout_marginLeft="10dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pptvvas_pay_fixedamount_choice"
                    style="@style/pptvvas_style_title"
                    android:text="@string/pptvvas_pay_channel_choice"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <GridView
                        android:id="@+id/pptvvas_pay_fixedamount_listview"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="10dip"
                        android:background="@color/pptvvas_of_transparent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/white"
                        android:dividerHeight="1dip"
                        android:fadingEdge="none"
                        android:gravity="center"
                        android:horizontalSpacing="0dip"
                        android:listSelector="#00000000"
                        android:numColumns="2"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="0dip"
                        ></GridView>
                    <!-- <com.pptv.vassdk.ui.widget.MyListView
                        android:id="@+id/pptvvas_pay_fixedamount_listview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/white"
                        android:dividerHeight="1dip"
                        android:fadingEdge="none"
                        android:listSelector="#00000000"
                        android:scrollbars="none"
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:background="@drawable/pptvvas_shape_bg_listview"
                        /> -->
                </LinearLayout>

            </LinearLayout>
            <!-- </LinearLayout> -->
        </LinearLayout>

        <com.ant.liao.GifView
            android:id="@+id/pptvvas_progressImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>

