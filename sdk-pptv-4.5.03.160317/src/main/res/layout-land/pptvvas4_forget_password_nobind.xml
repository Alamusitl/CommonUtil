<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:id="@+id/pptvvas_centerlay"
            android:layout_width="685px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.pptv.vassdk.ui.widget.PPTVDTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/pptvvas4_forgetpassword_tip2"
                android:textColor="@color/pptvvas4_white"
                android:textSize="65px"
                />

            <com.pptv.vassdk.ui.widget.PPTVDTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45px"
                android:gravity="center_horizontal"
                android:text="@string/pptvvas4_forgetpassword_tip1"
                android:textColor="@color/pptvvas4_white"
                android:textSize="30px"
                />

            <com.pptv.vassdk.ui.widget.PPTVDTextView
                android:layout_width="fill_parent"
                android:layout_height="75px"
                android:layout_marginTop="20px"
                android:autoLink="phone|email|web"
                android:background="@color/pptvvas4_transparent_black"
                android:gravity="center"
                android:text="@string/pptvvas4_forgetpassword_service"
                android:textColor="@color/pptvvas4_white"
                android:textColorLink="@color/pptvvas4_orange"
                android:textSize="35px"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
