<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="460dip"
        android:layout_height="300dip"
        android:background="@drawable/pptvvas4_notice"
        >
        <!--     	android:layout_marginLeft="50dip"
                android:layout_marginRight="50dip"
                android:layout_marginTop="30dip"
                android:layout_marginBottom="30dip" -->
        <RelativeLayout
            android:id="@+id/pptvvas_title_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"
            >

            <TextView
                android:id="@+id/pptvvas_notice_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pptvvas_close"
                android:singleLine="true"
                android:textColor="@color/pptvvas4_black"
                android:textSize="22dip"
                />

            <ImageView
                android:id="@+id/pptvvas_close"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pptvvas4_notice_close"
                />
        </RelativeLayout>

        <View
            android:id="@+id/pptvvas_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/pptvvas_title_lay"
            android:background="@color/pptvvas4_gray"
            />

        <WebView
            android:id="@+id/pptvvas_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/pptvvas_buttom"
            android:layout_below="@+id/pptvvas_line"
            android:background="#E4EAF1"
            android:scrollbars="none"
            />

        <RelativeLayout
            android:id="@+id/pptvvas_buttom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="15dip"
            >

            <ImageView
                android:id="@+id/pptvvas_show_choose"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pptvvas_show_tips"
                android:background="@drawable/pptvvas4_notice__choosenone"
                />

            <TextView
                android:id="@+id/pptvvas_show_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/pptvvas4_notice_tip_show"
                android:textColor="@color/pptvvas4_gray"
                android:textSize="15dip"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
