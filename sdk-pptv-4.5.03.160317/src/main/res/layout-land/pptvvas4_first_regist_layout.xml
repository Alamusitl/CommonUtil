<?xml version="1.0" encoding="utf-8"?>
<com.pptv.vassdk.ui.widget.BackRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:id="@+id/back_rela"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/pptvvas_bottombar_height"
        android:layout_marginTop="@dimen/pptvvas_topbar_height"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mobile_edit_text"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/pptvvas4_new_edittext_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/pptvvas4_input_name"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pptvvas4_mobile"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/mobile_input_edit"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/pptvvas_bindphone_phonenumber_hint"
                    android:inputType="number"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/close_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pptvvas4_close"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_edit_text"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pptvvas4_new_edittext_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/pptvvas4_input_name"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pptvvas4_message"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/identify_input_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:hint="@string/pptvvas_bindphone_identificationcode_hint"
                    android:inputType="number"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/pptv_identify_text"
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/pptvvas4_identify_code_bg"
                        android:gravity="center"
                        android:text="@string/pptvvas4_get_verify"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/regist_btn"
                style="@style/pptvvas4_button_arrow_orange"
                android:layout_marginTop="10dp"
                android:text="@string/pptvvas_regest_button_info"
                android:textSize="18sp"
                />
        </LinearLayout>
    </ScrollView>

</com.pptv.vassdk.ui.widget.BackRelativeLayout>