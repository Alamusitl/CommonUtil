<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/pptvvas4_blue_deep"/>
            <corners android:radius="@dimen/pptvvas_textview_radius"/>
            <stroke
                android:width="0dip"
                android:color="@color/pptvvas4_blue_deep"/>
            <gradient
                android:endColor="@color/pptvvas4_blue_deep"
                android:startColor="@color/pptvvas4_blue_deep"
                />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/pptvvas4_blue"/>
            <corners android:radius="@dimen/pptvvas_textview_radius"/>
            <stroke
                android:width="0dip"
                android:color="@color/pptvvas4_blue"/>
            <gradient
                android:angle="-90"
                android:centerColor="@color/pptvvas4_blue"
                android:endColor="@color/pptvvas4_blue_deep"
                android:startColor="@color/pptvvas4_blue"
                android:type="linear"
                />
        </shape>
    </item>
</selector>
