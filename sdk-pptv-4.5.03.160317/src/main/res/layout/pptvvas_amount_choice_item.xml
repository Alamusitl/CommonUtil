<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        >

        <TextView
            android:id="@+id/pptvvas_amount_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pptvvas_item_choice"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:textColor="@color/pptvvas_orange"
            android:textSize="16dip"
            />

        <TextView
            android:id="@+id/pptvvas_item_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/pptvvas_amount_choice_icon"
            android:gravity="center"
            />
    </RelativeLayout>
</LinearLayout>
