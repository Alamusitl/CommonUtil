<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_fetch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Fetch One Ad"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="样式1："/>

            <RelativeLayout
                android:id="@+id/rlTemplate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ebf1be">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/iv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/iv_icon"
                    android:textColor="#000"
                    android:textSize="20sp"
                    />

                <ImageView
                    android:id="@+id/iv_main"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_below="@id/iv_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_mention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="样式2："/>

            <RelativeLayout
                android:id="@+id/rlTemplate2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#fbdbc2">

                <ImageView
                    android:id="@+id/iv_icon2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/iv_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/iv_icon2"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/iv_desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_title2"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/iv_icon2"
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/iv_cta"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="#8ec52f"
                    android:gravity="center"
                    android:text="代码被注释"
                    android:textColor="#ffffff"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>