<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_user_getpass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#dae3ec">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="70dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/upomp_bypay_navigator"/>

            <LinearLayout
                android:id="@+id/ll_user_getpass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_header"
                android:layout_marginTop="0dip"
                android:background="@drawable/upomp_bypay_sub_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_login_getpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_weight="1"
                    android:background="@drawable/upomp_bypay_sub10_default"
                    android:text="@string/upomp_bypay_loading"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"/>

                <Button
                    android:id="@+id/btn_register_getpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:layout_weight="1"
                    android:background="@drawable/upomp_bypay_sub11_default"
                    android:text="@string/upomp_bypay_register"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"/>

            </LinearLayout>
            <!-- one -->
            <RelativeLayout
                android:id="@+id/rl_info_getpass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_user_getpass"
                android:layout_marginTop="8dip"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_username_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/upomp_bypay_input_bg">

                    <RelativeLayout
                        android:id="@+id/rl_username_getpass_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_username_getpass"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center_vertical"
                            android:text="@string/upomp_bypay_username"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_username_getpass_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_toRightOf="@+id/rl_username_getpass_title">

                        <EditText
                            android:id="@+id/et_username_getpass"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:background="#00000000"
                            android:hint="@string/upomp_bypay_sixtotwenty"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_telnum_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_username_getpass"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/upomp_bypay_input_bg">

                    <RelativeLayout
                        android:id="@+id/rl_telnum_getpass_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_telnum_getpass"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center_vertical"
                            android:text="@string/upomp_bypay_firstmobilenum"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_telnum_getpass_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_toRightOf="@+id/rl_telnum_getpass_title">

                        <EditText
                            android:id="@+id/et_telnum_getpass"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:background="#00000000"
                            android:hint="@string/upomp_bypay_secondmobilenum"
                            android:maxLength="11"
                            android:numeric="integer"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_validcode_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_telnum_getpass"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/upomp_bypay_input_bg">

                    <RelativeLayout
                        android:id="@+id/rl_validcode_getpass_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_validcode_getpass"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center_vertical"
                            android:text="@string/upomp_bypay_firstshortmessagesecuritycode"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_validcode_getpass_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="0dip"
                        android:layout_toRightOf="@+id/rl_validcode_getpass_title">

                        <EditText
                            android:id="@+id/et_validcode_getpass"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:background="#00000000"
                            android:hint="@string/upomp_bypay_secondshortmessagesecuritycode"
                            android:maxLength="6"
                            android:numeric="integer"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <Button
                            android:id="@+id/btn_validcode_getpass"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dip"
                            android:background="@drawable/upomp_bypay_input_btn4"
                            android:text="@string/upomp_bypay_get"
                            android:textColor="#000000"
                            android:textSize="15dip"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_webvalidcode_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/rl_validcode_getpass"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/upomp_bypay_input_bg">

                    <RelativeLayout
                        android:id="@+id/rl_webvalidcode_getpass_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_webvalidcode_getpass"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center_vertical"
                            android:text="@string/upomp_bypay_checkcode"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_webvalidcode_getpass_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="2dip"
                        android:layout_toRightOf="@+id/rl_webvalidcode_getpass_title">

                        <EditText
                            android:id="@+id/et_webvalidcode_getpass"
                            android:layout_width="120dip"
                            android:layout_height="40dip"
                            android:background="#00000000"
                            android:maxLength="4"
                            android:numeric="integer"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <ImageView
                            android:id="@+id/iv_webvalidcode_getpass"
                            android:layout_width="70dip"
                            android:layout_height="38dip"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dip"/>

                        <ProgressBar
                            android:id="@+id/p_webvalidcode_getpass"
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="30dip"
                            android:layout_marginTop="5dip"
                            android:indeterminateDrawable="@drawable/upomp_bypay_progress"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_button_next_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_webvalidcode_getpass"
                    android:layout_marginTop="20dip">

                    <Button
                        android:id="@+id/btn_button_next_getpass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dip"
                        android:layout_marginRight="30dip"
                        android:background="@drawable/upomp_bypay_btn_enter"
                        android:gravity="center"
                        android:text="@string/upomp_bypay_next"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </RelativeLayout>
            <!-- two -->
            <RelativeLayout
                android:id="@+id/rl_next_getpass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_user_getpass"
                android:layout_marginTop="8dip"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rl_question_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/upomp_bypay_input_bg">

                    <RelativeLayout
                        android:id="@+id/rl_question_getpass_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_question_getpass"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center_vertical"
                            android:text="@string/upomp_bypay_securityissue"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_question_getpass_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_toRightOf="@+id/rl_question_getpass_title">

                        <TextView
                            android:id="@+id/tv_question_info_getpass"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_question_result_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_question_getpass"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/upomp_bypay_input_bg">

                    <RelativeLayout
                        android:id="@+id/rl_question_result_getpass_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_question_result_getpass"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center_vertical"
                            android:text="@string/upomp_bypay_securityquestionanswer"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_question_result_getpass_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_toRightOf="@+id/rl_question_result_getpass_title">

                        <EditText
                            android:id="@+id/et_question_result_getpass"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:background="#00000000"
                            android:hint="@string/upomp_bypay_twotosixteen"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_newpass_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_question_result_getpass"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/upomp_bypay_input_bg">

                    <RelativeLayout
                        android:id="@+id/rl_newpass_getpass_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_newpass_getpass"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center_vertical"
                            android:text="@string/upomp_bypay_newpsw"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_newpass_getpass_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_toRightOf="@+id/rl_newpass_getpass_title">

                        <Button
                            android:id="@+id/btn_newpass_getpass"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:layout_marginRight="5dip"
                            android:background="#00000000"
                            android:gravity="left|center_vertical"
                            android:hint="@string/upomp_bypay_sixtotwelve"
                            android:textColor="#000000"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_confirm_newpass_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_newpass_getpass"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/upomp_bypay_input_bg">

                    <RelativeLayout
                        android:id="@+id/rl_confirm_newpass_getpass_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_confirm_newpass_getpass"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_marginLeft="10dip"
                            android:gravity="center_vertical"
                            android:text="@string/upomp_bypay_enternewpsw"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_confirm_newpass_getpass_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_toRightOf="@+id/rl_confirm_newpass_getpass_title">

                        <Button
                            android:id="@+id/btn_confirm_newpass_getpass"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:layout_marginRight="5dip"
                            android:background="#00000000"
                            android:gravity="left|center_vertical"
                            android:hint="@string/upomp_bypay_sixtotwelve"
                            android:textColor="#000000"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_result_psw_getpass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_confirm_newpass_getpass"
                    android:layout_marginTop="20dip">

                    <Button
                        android:id="@+id/btn_result_psw_getpass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dip"
                        android:layout_marginRight="30dip"
                        android:background="@drawable/upomp_bypay_btn_enter"
                        android:gravity="center"
                        android:text="@string/upomp_bypay_affirm"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <com.unionpay.upomp.bypay.view.MainBottom
        android:id="@+id/main_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>