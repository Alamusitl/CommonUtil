<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="mobisocial.omlet.overlaybar.ui.fragment.VideoPreviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout_preview_top_bar"
            style="@style/omp_video_overlay_top_bar_container">

            <ImageButton
                android:id="@+id/back"
                style="@style/omp_video_overlay_back_button"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/view_group_video_preview_buttons"
                style="@style/omp_video_overlay_top_bar_button_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/linear_layout_cut_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/omp_video_preview_edit_button_selector"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/image_edit_cut"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/omp_btn_edit_cut_normal"/>

                    <TextView
                        android:id="@+id/textview_edit_preview"
                        style="@style/omp_video_overlay_top_bar_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/omp_edit"/>
                </LinearLayout>

                <View
                    style="@style/omp_button_divider"
                    android:layout_width="2dp"
                    android:layout_height="13dp"/>

                <LinearLayout
                    android:id="@+id/linear_layout_save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/omp_video_preview_edit_button_selector"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/image_edit_save"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/omp_btn_edit_save_normal"/>

                    <TextView
                        android:id="@+id/textview_save_video"
                        style="@style/omp_video_overlay_top_bar_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/omp_save"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/omp_video_overlay_top_bar_title"
                android:text="@string/omp_preview"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_preview_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/omp_video_overlay_bottom_bar_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/omp_video_preview_upload_button_selector"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linear_layout_upload_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_edit_upload"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/omp_btn_edit_upload_normal"/>

                <TextView
                    android:id="@+id/textview_upload"
                    style="@style/omp_video_overlay_top_bar_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/omp_upload"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>

        <mobisocial.omlet.overlaybar.ui.view.video.VideoViewGroup
            android:id="@+id/common_video_view_groups"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/relative_layout_preview_bottom_bar"
            android:layout_below="@id/relative_layout_preview_top_bar"
            />

        <LinearLayout
            android:id="@+id/redo_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/relative_layout_preview_bottom_bar"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="31dp"
            android:background="@drawable/omp_white_border_black_alpha_fill_round_background"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/omp_btn_edit_redo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="14.5dp"
                android:text="@string/omp_undo_all"
                android:textColor="#ffffff"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

