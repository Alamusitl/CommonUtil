<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/payresult_item_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/payresult_item_value"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/ebpay_gray_999999"
        android:textSize="@dimen/ebpay_text_size_14"
        />

    <TextView
        android:id="@+id/payresult_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/ebpay_gray_999999"
        android:textSize="@dimen/ebpay_text_size_16"
        />
</RelativeLayout>