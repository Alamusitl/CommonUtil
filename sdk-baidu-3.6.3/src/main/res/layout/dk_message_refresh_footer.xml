<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:visibility="gone">

    <RelativeLayout
        android:id="@+id/dk_message_footer_layout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_horizontal|center_vertical"
        >

        <ProgressBar
            android:id="@+id/dk_message_footer_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/dk_message_footer_progressbar"
            />

        <TextView
            android:id="@+id/dk_message_footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dk_message_footer_progress"
            android:text="@string/dk_message_footer_loading"
            android:textSize="12sp"
            />
    </RelativeLayout>
</RelativeLayout>
