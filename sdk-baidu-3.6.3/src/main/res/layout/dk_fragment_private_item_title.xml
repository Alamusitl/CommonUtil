<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <TextView
        android:id="@+id/dk_tv_my_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dk_kubi"
        android:textColor="@color/dk_color_333333"
        android:textSize="@dimen/dk_text_size_16_sp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dk_tv_my_question_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dk_kubi"
                android:textColor="@color/dk_color_666666"
                android:textSize="@dimen/dk_text_size_14_sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/dk_tv_question_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/dk_kubi"
                android:textColor="@color/dk_color_666666"
                android:textSize="@dimen/dk_text_size_14_sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dk_layout_my_question_reply"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/dk_bg_customer_question"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/dk_tv_my_question_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/dk_kubi"
            android:textColor="@color/dk_color_666666"
            android:textSize="@dimen/dk_text_size_14_sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/dk_payment_dialog_dot_bg"/>
</LinearLayout>