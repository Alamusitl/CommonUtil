<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bd_wallet_white"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bd_wallet_dialog_linegray_d9d9d9"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/bd_wallet_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <com.baidu.wallet.base.widget.NetImageView
            android:id="@+id/wallet_personal_my_bank_card_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="2"
            android:src="@drawable/wallet_service_img"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/card_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/ebpay_text_111111"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/card_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_name_tv"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/bank_card_dialog_no_support"
                android:textColor="@color/bd_wallet_text_gray2"
                android:textSize="12sp"
                />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/bank_card_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/ebpay_transparent"
            android:checked="false"
            android:clickable="false"
            android:gravity="center"
            android:scaleType="fitStart"
            android:src="@drawable/bd_wallet_image_check_bg"
            />

    </LinearLayout>

</LinearLayout>