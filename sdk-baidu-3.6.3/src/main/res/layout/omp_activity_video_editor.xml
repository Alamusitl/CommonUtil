<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/omp_video_overlay_outer_background">

    <RelativeLayout
        style="@style/omp_video_overlay_edge_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_video_editor_overlay_container"
        style="@style/omp_video_overlay_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_close_button"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/omp_btn_clospeage"/>
    </RelativeLayout>
</RelativeLayout>

