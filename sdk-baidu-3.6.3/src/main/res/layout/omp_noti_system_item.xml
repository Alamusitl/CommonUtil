<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/omp_gray_text_70706f"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/omp_stub_yesterday_afternoon_time"
                android:textColor="@color/omp_gray_background_9b9b9b"
                android:textSize="10sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_mail_omlet"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="14dp"
            android:layout_weight="1"
            android:background="@drawable/omp_gray_border_white_fill_round_background"
            android:gravity="center"
            android:minWidth="90dp"
            android:text="@string/omp_send_email_to_omlet"
            android:textColor="@color/omp_gray_text_70706f"
            android:textSize="14sp">
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/omp_gray_text_cbcbcb"></View>

</LinearLayout>
