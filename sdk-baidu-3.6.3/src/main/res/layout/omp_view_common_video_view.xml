<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/view_group_video_container"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:background="@android:color/black">

    <ImageView
        android:id="@+id/image_view_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:background="@android:color/black"
        android:scaleType="fitCenter"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image_view_play_video"
        android:layout_width="85dp"
        android:layout_height="84dp"
        android:layout_centerInParent="true"
        android:src="@drawable/omp_btn_player_play"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/view_group_player_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="124dp"
            android:background="@drawable/omp_ic_player_loadingface"/>

        <ImageView
            android:id="@+id/image_view_player_loading"
            android:layout_width="125dp"
            android:layout_height="124dp"
            android:background="@drawable/omp_ic_player_loading"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_group_media_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/omp_black_up_down_gradient"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:background="@drawable/omp_ic_popup_omlet"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="播放出现错误"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="系统出现错误，您可以选择稍后再看，或者再试一次"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_see_later"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/omp_view_om_media_controller_error_button_background"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="稍后再看"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_view_try_again"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/omp_view_om_media_controller_error_button_background"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="再试一次"
                    android:textColor="@color/omp_omlet_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_group_media_error_critical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/omp_black_up_down_gradient"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:background="@drawable/omp_ic_popup_omlet"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="系統出现错误"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="您的视频已损坏，请回到游戏画面，并重新录制一段视频"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_reset_and_back"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/omp_view_om_media_controller_error_button_background"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="回到游戏画面"
                    android:textColor="@color/omp_omlet_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

