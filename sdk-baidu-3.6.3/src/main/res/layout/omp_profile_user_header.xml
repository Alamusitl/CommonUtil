<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_group_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/user_profile_image"
                android:layout_width="100dip"
                android:layout_height="100dip"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="21dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <EditText
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:singleLine="true"
                android:textColor="@color/omp_gray_text_4a4a4a"
                android:textColorHint="@color/omp_gray_text_cbcbcb"
                android:textSize="24sp"/>

            <LinearLayout
                android:id="@+id/omlet_id_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_profile_name"
                    android:layout_marginTop="9dp"
                    android:text="@string/omp_id"
                    android:textColor="@color/omp_gray_background_9b9b9b"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/user_omlet_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/id_text"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="9dp"
                    android:layout_toRightOf="@+id/id_text"
                    android:fontFamily="sans-serif-light"
                    android:singleLine="true"
                    android:textColor="@color/omp_gray_background_9b9b9b"
                    android:textSize="18sp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_follow_view_group"
            android:layout_width="150dp"
            android:layout_height="32dip"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="22dp">

            <TextView
                android:id="@+id/cancel_follow_btn"
                style="@style/omp_button_background_cancel_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:visibility="gone"></TextView>

            <LinearLayout
                android:id="@+id/add_follow_btn"
                style="@style/omp_button_background_add_follow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    style="@style/omp_image_add_follow"
                    android:layout_width="14dip"
                    android:layout_height="14dip"/>

                <TextView
                    style="@style/omp_text_add_follow"
                    android:layout_marginLeft="8dip"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_group_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>
