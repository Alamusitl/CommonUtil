<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/omp_main_overlay_top_bar_container">

        <ImageButton
            android:id="@+id/image_button_back"
            style="@style/omp_video_overlay_back_button"
            android:src="@drawable/omp_btn_topbar_sharetopeple_close"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="44dip"
            android:layout_toRightOf="@+id/back"
            android:gravity="center"
            android:text="@string/omp_follow_user_title"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/omp_your_id"
            android:textColor="@color/omp_gray_text_4a4a4a"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/omp_gray_border_white_fill_round_background"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@null"
                android:src="@drawable/omp_ic_search_i_d_followingpage"/>

            <EditText
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/omp_search_id_of_players_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/omp_gray_text_4a4a4a"
                android:textColorHint="@color/omp_gray_text_cbcbcb"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/cleantext_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@null"
                android:src="@drawable/omp_ic_cleantext_followingpage"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/user_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="11dp"/>

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:textColor="@color/omp_gray_text_4a4a4a"
                android:textSize="14sp"/>

            <RelativeLayout
                android:id="@+id/user_follow_view_group"
                android:layout_width="246dip"
                android:layout_height="32dip"
                android:layout_marginTop="13dip">

                <TextView
                    android:id="@+id/cancel_follow_btn"
                    style="@style/omp_button_background_cancel_follow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:visibility="gone"></TextView>

                <LinearLayout
                    android:id="@+id/add_follow_btn"
                    style="@style/omp_button_background_add_follow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        style="@style/omp_image_add_follow"
                        android:layout_width="14dip"
                        android:layout_height="14dip"/>

                    <TextView
                        style="@style/omp_text_add_follow"
                        android:layout_marginLeft="8dip"
                        android:textSize="16sp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
