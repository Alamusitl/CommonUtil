<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/gfan_bg"
                android:paddingBottom="10dp"
                tools:context="com.mappn.sdk.init.InviteActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="邀请码"
        android:textColor="#ffffff"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/inviteEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/inviteEdit"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skipBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gfan_yellow_selector"
            android:gravity="center"
            android:text="跳过"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/okBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/gfan_edit_layout_height"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/gfan_blue_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>
